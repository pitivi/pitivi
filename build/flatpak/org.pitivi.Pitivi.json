        "cflags": "-O0 -g",
        "cxxflags": "-O0 -g",
        "env": {
            "PYTHON": "python3",
            "GST_PLUGIN_SYSTEM_PATH": "/app/lib/gstreamer-1.0/",
            "FREI0R_PATH": "/app/lib/frei0r-1/"
